					{{ forms.campo({'tipo':'input','type':'hidden','name':'cicleorder'}) }}
					{{ forms.campo({tipo:'input','type':'text',name:'cicleabbr',label: lang('sc_abbr'),maxLength:5 }) }}
					{{ forms.campo({tipo:'input','type':'text',name:'ciclename',label: lang('sc_cicle'),prepend:{tipo:'button',icon:'check','title':lang('save')}})}}
					</form>
				</div>
				<ul class="wide-list">
				
				</ul>
			</div>
		</div>
	</div>
	<div class="row-fluid ">
		<div class="box span6 systemdivs" style="display:none;">
			<div class="box-header well">
				<h2>{{ lang('sc_periods') }}</h2>
				<div class="box-icon">
					<a href="#" class="btn btn_adddiv btn-round"><i class="icon-plus"></i></a>
					<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
