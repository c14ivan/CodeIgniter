					<i class="icon-remove closeedtplan" style="float:right"></i>
					<form id="planedit" class="form-horizontal">
						{{ forms.campo({'tipo':'input','type':'hidden','name':'scsystemid'}) }}
						{{ forms.campo({'tipo':'input','type':'hidden','name':'planid'}) }}
